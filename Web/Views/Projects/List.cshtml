@model IEnumerable<Web.Models.Project>

@{
    ViewBag.Title = "List";
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body class="listcss">
    <div class="Home">
        <h2><span style="color:darkseagreen">Projects List</span> </h2>
    </div>
    <br />
    <p>
        @using (Html.BeginForm("List", "Projects", FormMethod.Get))
        {
            <b>
                Search By
            </b>
            @Html.TextBox("Search")<input type="submit" value="Search" />
            <b class="right">
                <i class="fa-solid fa-circle-plus"></i>
                @Html.ActionLink("Create New Project   ", "Create", new { }, new { @class = "clr" }) |
                @Html.ActionLink("   Assign", "AssignUsers", new { }, new { @class = "clr" })
            </b>
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEndDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectEndDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, new { @class = "clr" })<i class="fa-solid fa-pen-to-square"></i>  |
                    @Html.ActionLink("Details", "Details", new { id = item.ProjectId }, new { @class = "clr" })<i class="fa-solid fa-circle-info"></i> |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new { @class = "clr" })<i class="fa-solid fa-trash"></i>
                </td>
            </tr>
        }

    </table>

</body>
</html>