<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color: antiquewhite;">
       
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Prolifics Project Management", "HomePage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-brand">
                <div class="menu">

                    <i class="fa-solid fa-house"></i> @Html.ActionLink("Home", "HomePage", "Home", new { area = "" }, null) |


                    @if (User.Identity.IsAuthenticated)
                    {
                        <label style="color:darkblue">Hello  @User.Identity.Name  |</label>
                        
                             @Html.ActionLink("Employees", "List", "Employee", new { area = "" }, null)

                             @Html.ActionLink("Projects", "List", "Projects", new { area = "" }, null)
                             @Html.ActionLink("Roles", "List", "Role", new { area = "" }, null)

                        <a href="#" class="dropdown-toggle  " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa-solid fa-bars"></i></a>
                        <ul class="sub-menu children dropdown-menu">
                            <li> @Html.ActionLink("MyProfile", "MyProfile", "Login", new { UserName = User.Identity.Name }, null)</li>

                            <li> @Html.ActionLink("Logout", "Logout", "Login")</li>

                        </ul>


                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", "Login")

                    }
                </div>

            </div>

        </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer class="navbar-fixed-bottom" style="margin-left:50px">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
