@model IEnumerable<Web.Models.Role>

@{
    ViewBag.Title = "List";
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body class="listcss">
    <div class="Home">
        <h2><span style="color:darkseagreen">Roles List</span> </h2>
    </div>
    <br />
    <p>
        @using (Html.BeginForm("List", "Role", FormMethod.Get))
        {
            <b>
                Search By
            </b>
            @Html.TextBox("Search")<input type="submit" value="Search" />
                                   <b class="right">
                                       <i class="fa-solid fa-circle-plus"></i>
                                       @Html.ActionLink("Create New Role", "Create", new { }, new { @class = "clr" }) |
                                       @Html.ActionLink("Assign", "AssignUsers", new { }, new { @class = "clr" }) | 
                                       @Html.ActionLink("List", "Index","UsersToRoles" ,new { }, new {@class="clr"})
                                   </b>
        }

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td class="right">

                        @Html.ActionLink("Details", "Details", new { id = item.RoleId }, new { @class = "clr" }) <i class="fa-solid fa-circle-info"></i>|
                        @Html.ActionLink("Delete", "Delete", new { id = item.RoleId }, new { @class = "clr" })<i class="fa-solid fa-trash"></i>
                    </td>
                </tr>
            }

        </table>
        
</body>
</html>